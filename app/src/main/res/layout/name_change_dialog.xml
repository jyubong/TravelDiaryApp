<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nameChangeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름 변경"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameChangeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="변경할 이름"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/nameChangeTitle"
        app:layout_constraintTop_toBottomOf="@+id/nameChangeTitle" />

    <EditText
        android:id="@+id/nameChangeEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/nameChangeTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/nameChangeTextView"
        app:layout_constraintTop_toTopOf="@+id/nameChangeTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>